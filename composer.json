{
  "name": "xakki/phpwall",
  "version": "0.8.1",
  "description": "PHP Web Application Firewall (WAF)",
  "type": "library",
  "prefer-stable": true,
  "license": "LGPL-2.1",
  "authors": [
    {
      "name": "Xakki",
      "email": "dev@xakki.ru"
    }
  ],
  "support": {
    "issues": "https://github.com/xakki/phpwall/issues"
  },
  "require": {
    "php": ">=8.1",
    "ext-json": "*",
    "ext-pdo": "*",
    "ext-curl": "*",
    "ext-mbstring": "*",
    "psr/log": "^3.0"
  },
  "require-dev": {
    "phpstan/phpstan": "*",
    "friendsofphp/php-cs-fixer": "^3.86",
    "phpunit/phpunit": "^10.5"
  },
  "suggest": {
    "ext-memcached": "Cache with memcached",
    "ext-redis": "Cache with redis"
  },
  "config": {
    "preferred-install": "dist"
  },
  "autoload": {
    "psr-4": {
      "Xakki\\PHPWall\\": "src/",
      "Xakki\\PHPWall\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "phpstan": "APP_ENV=testing XDEBUG_MODE=off vendor/bin/phpstan analyse --memory-limit 1G -v",
    "phpstan-clean": "XDEBUG_MODE=off vendor/bin/phpstan clear-result-cache",
    "cs-check": "XDEBUG_MODE=off php-cs-fixer fix src --dry-run --diff",
    "cs-fix": "XDEBUG_MODE=off php-cs-fixer fix src --diff",
    "phpunit": "XDEBUG_MODE=off vendor/bin/phpunit --no-coverage"
  }
}
